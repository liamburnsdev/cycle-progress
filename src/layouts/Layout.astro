---
export interface Props {
  title: string;
}

const { title } = Astro.props;

import '../styles/global.css' 
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Track your cycling recovery progress" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    margin: 0;
    min-height: 100vh;
    background: #f9fafb;
  }
</style>